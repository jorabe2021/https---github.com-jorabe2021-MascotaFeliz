@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}

<h1>Listado de Mascotas</h1>
<table class="table">

    <th>Nombre</th>
    <th>Color</th>
    <th>Especie</th>
    <th>Raza</th>
   
    @foreach (var mascota in Model.listaMascotas)
    {
        <tr>


            <td>@mascota.Nombre</td>
            <td>@mascota.Color</td>
            <td>@mascota.Especie</td>
            <td>@mascota.Raza</td>
            

            <td>
                <a class="btn btn-primary table-btn" asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id">
                    Detalle Mascota
                </a>
            </td>
            <td>
                <a class="btn btn-primary table-btn" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                    Editar Mascota
                </a>
            </td>

        </tr>
    }
</table>
<a class = "btn btn-primary table-btn" asp-page="./EditarMascotas" class="btn-default">Adicionar Mascotas</a>